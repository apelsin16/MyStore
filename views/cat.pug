include header

div.container.mb-4
    div.row
        each val, index in cat
            div.col-xl-6.col-md-12
                div(class='card flex-md-row mb-4 box-shadow h-md-250')
                    div(class='card-body d-flex flex-column align-items-start')
                        h2.h2 #{val['category']}
                        p #{val['description']}
                    img(class='card-img-right flex-auto d-none d-md-block card-img-cat', src='images/'+val['image'] )
div.container
    div.row
        each val, index in goods
            include card.pug
include nav
include footer


